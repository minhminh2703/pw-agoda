{
  "name": "pw-agoda",
  "version": "1.0.0",
  "description": "Playwright tests with Allure reporting",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "report:generate": "allure generate -o allure-report allure-results",
    "report:open": "allure open allure-report",
    "report:clean": "rm -rf allure-results && mkdir -p allure-results"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.2",
    "allure": "^3.0.0",
    "allure-playwright": "^3.0.0"
  },
  "overrides": {
    "underscore": ">=1.12.1",
    "fast-xml-parser": ">=5.3.4"
  },
  "dependencies": {
    "dotenv": "^17.2.4"
  }
}
